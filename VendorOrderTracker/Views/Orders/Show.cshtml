@{
  Layout = "_Layout";
}

<h1>Order Details:</h1>

<h4>Vendor: @Model["vendor"].Name</h4>
<h4>Title: @Model["order"].Title</h4>
<h4>Description: @Model["order"].Description</h4>
<h4>Price: @Model["order"].Price</h4>
<h4>Date: @Model["order"].Date</h4>

<a href='/vendors/@Model["vendor"].Id/orders/new'>Add another order for this vendor</a>