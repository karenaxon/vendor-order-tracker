@{
  Layout = "_Layout";
}
@using VendorOrderTracker.Models;

<p class="h1 mt-3">Pierre's List of Vendors</p>

@if(@Model.Count == 0)
{
  <h3 class="my-3">No vendors have been added to the list yet.</h3>
}

@foreach(Vendor vendor in Model)
{
  <h2><a href="/vendor/@vendor.Id">@vendor.Name</a></h2>
}

<button type="button" class="btn btn-light my-3"><a href='/vendor/new'>Add a New Vendor</a></button>
